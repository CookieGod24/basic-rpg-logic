{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build w/ g++",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-I${workspaceFolder}/include",
                "-g",
                "-Wall",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "main"

            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}